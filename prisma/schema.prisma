generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model mahasiswa {
  nama    String
  stambuk String @id @unique(map: "stambuk")
  jurusan String
}

model admin {
  id       Int    @id @default(autoincrement())
  nama     String
  password String @db.VarChar(255)
}

model dosen {
  id   Int    @id @default(autoincrement())
  nama String
  nidn String
}

model konten {
  id         Int      @id @default(autoincrement())
  nama_file  String
  akses      String
  created_at DateTime @default(now()) @db.Date
}

model responden {
  id_responden Int    @id @default(autoincrement())
  jenis_akun   String
  nama         String
  akses        String
  fitur        String
  mudah        String
  tampilan     String
  kekurangan   String
}
